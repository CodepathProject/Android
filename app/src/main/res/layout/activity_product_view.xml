<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/ivProductImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/product_image"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/svReviews"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:id="@+id/rlHeader"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:paddingLeft = "@dimen/product_margin"
                android:paddingRight = "@dimen/product_margin"
                android:paddingTop = "20dp"
                android:paddingBottom = "5dp"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/colorDarkGray"
                tools:text="Samsung Galaxy S7" />

            <TextView
                android:id="@+id/tvBrandName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvProductName"
                android:layout_marginLeft="@dimen/product_margin"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textAllCaps="true"
                android:textSize="14sp"
                tools:text="Samsung" />

            <LinearLayout
                android:id="@+id/line2"
                android:background="@color/action_gray"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/product_margin"
                android:layout_marginRight="@dimen/product_margin"
                android:layout_below="@id/tvBrandName"
                android:layout_height="0.5dp"
                android:orientation="horizontal"/>
            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line2"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvFollow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTint="@color/colorGray"
                    android:drawableTop="@drawable/noun_729141_cc"
                    android:gravity="center"
                    android:text="@string/follow"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/colorGray" />

                <TextView
                    android:id="@+id/tvShelf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTint="@color/colorGray"
                    android:drawableTop="@drawable/shelf"
                    android:gravity="center"
                    android:text="@string/shelf"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/colorGray" />

                <TextView
                    android:id="@+id/tvWatch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTint="@color/colorGray"
                    android:drawableTop="@drawable/eye"
                    android:gravity="center"
                    android:text="@string/watch"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/colorGray" />

                <TextView
                    android:id="@+id/tvPlots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:drawableTint="@color/colorGray"
                    android:drawableTop="@drawable/plot"
                    android:gravity="center"
                    android:onClick="onShowPlot"
                    android:text="@string/trends"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/colorGray"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line3"
                android:background="@color/action_gray"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/product_margin"
                android:layout_marginRight="@dimen/product_margin"
                android:layout_below="@id/ll"
                android:layout_height="0.5dp"
                android:orientation="horizontal"/>
            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line3"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="@dimen/product_margin"
                android:textSize="20sp"
                android:textColor="@color/colorRed"
                tools:text="$85" />

            <RatingBar
                android:id="@+id/rbAverageRating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPrice"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="@dimen/product_margin"
                android:numStars="5"
                android:stepSize="0.5"
                android:theme="@style/ratingBar"
                tools:rating="3.5" />

            <TextView
                android:id="@+id/tvReviewCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPrice"
                android:layout_toEndOf="@+id/rbAverageRating"
                android:textColor="@color/colorBlue"
                android:layout_marginStart="5dp"
                android:paddingTop="5dp"
                android:textSize="12sp"
                tools:text="(595)" />

            <TextView
                android:id="@+id/tvAddPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tvReviewCount"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/line3"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="@dimen/product_margin"
                android:background="@drawable/rounded_corner"
                android:gravity="center"
                android:onClick="addPrice"
                android:padding="10dp"
                android:text="@string/add_price"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvFriendsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvAddPrice"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="25dp"
                android:text="@string/owned_by_your_friends"
                android:textSize="20sp"
                android:visibility="gone" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvFriends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvFriendsTitle"
                android:layout_marginTop="10dp" />


            <LinearLayout
                android:id="@+id/line4"
                android:background="@color/action_gray"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/product_margin"
                android:layout_marginRight="@dimen/product_margin"
                android:layout_below="@id/rvFriends"
                android:layout_height="0.5dp"
                android:orientation="horizontal"/>


            <TextView
                android:id="@+id/tvReviewsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line4"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="@dimen/product_margin"
                android:text="@string/reviews"
                android:fontFamily="sans-serif-light"
                android:textAppearance="?android:attr/textAppearanceLarge" />
            <LinearLayout
                android:id="@+id/line5"
                android:background="@color/action_gray"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="@dimen/product_margin"
                android:layout_marginRight="@dimen/product_margin"
                android:layout_below="@id/tvReviewsTitle"
                android:layout_height="0.5dp"
                android:orientation="horizontal"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvReviews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line5"
                    android:paddingLeft="8dp"
                    android:layout_marginLeft="@dimen/product_margin"
                    android:layout_marginRight="@dimen/product_margin"
                    android:paddingRight="8dp" />
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:onClick="onAddReview"
        android:src="@drawable/ic_add_black_24dp"
        android:tint="@color/colorIcons"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="normal"
        app:layout_anchor="@id/svReviews"
        app:layout_anchorGravity="bottom|right|end" />
</android.support.design.widget.CoordinatorLayout>