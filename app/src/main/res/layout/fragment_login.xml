<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <GridLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:rowCount="4"
        android:columnCount="3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:id="@+id/icon3"
            android:background="#AAAAAA"
            android:layout_row="0"
            android:layout_column="1"
            android:scaleType="centerCrop" />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:id="@+id/icon4"
            android:background="#AAAAAA"
            android:layout_row="0"
            android:layout_column="2" />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:id="@+id/icon5"
            android:background="#AAAAAA"
            android:layout_row="1"
            android:layout_column="0" />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:id="@+id/icon6"
            android:background="#AAAAAA"
            android:layout_row="1"
            android:layout_column="1" />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:id="@+id/icon7"
            android:background="#AAAAAA"
            android:layout_row="1"
            android:layout_column="2" />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:id="@+id/icon8"
            android:background="#AAAAAA"
            android:scaleType="centerCrop"
            android:layout_row="2"
            android:layout_column="0" />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:id="@+id/icon9"
            android:background="#AAAAAA"
            android:scaleType="centerCrop"
            android:layout_row="2"
            android:layout_column="1" />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:id="@+id/icon10"
            android:scaleType="centerCrop"
            android:background="#AAAAAA"
            android:layout_row="2"
            android:layout_column="2" />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:id="@+id/icon11"
            android:scaleType="centerCrop"
            android:background="#AAAAAA"
            android:layout_row="3"
            android:layout_column="0" />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:id="@+id/icon12"
            android:scaleType="centerCrop"
            android:background="#AAAAAA"
            android:layout_row="3"
            android:layout_column="1" />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:id="@+id/icon13"
            android:scaleType="centerCrop"
            android:background="#AAAAAA"
            android:layout_row="3"
            android:layout_column="2" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:id="@+id/icon2"
            android:background="#AAAAAA"
            android:layout_row="0"
            android:layout_column="0"
            android:scaleType="centerCrop" />
    </GridLayout>
    <ImageView
        android:id="@+id/loginBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#90000000"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/llLogin"
        android:src="@drawable/ic_appicon_green"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_above="@+id/llSignUp"
        android:background="#90000000"
        android:id="@+id/llLogin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="@style/loginLinearLayout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/ic_email"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:inputType="textEmailAddress"
                android:id="@+id/etEmail"
                style="@style/loginEditText"
                android:hint="Email"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="@style/loginLinearLayout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/ic_password"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:inputType="textPassword"
                android:id="@+id/etPassword"
                style="@style/loginEditText"
                android:hint="Password"/>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnLogIn"
            style="@style/loginButton"
            android:text="Log In"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textColor="@color/white"
            style="@style/loginHelperText"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:gravity="bottom"
                style="@style/loginHelperText"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="SKIP LOGIN"/>

            <Switch
                android:id="@+id/swSkipLogin"
                android:layout_width="wrap_content"
                android:gravity="top"
                android:layout_height="37dp"
                android:layout_marginTop="20dp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llSignUp"

        android:layout_margin="10dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                style="@style/facebookView"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="@style/facebookText">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnFBLogin"
                android:drawableLeft="@drawable/ic_facebook"
                android:drawablePadding="5dp"
                android:padding="5dp"
                android:text="Log In with Facebook"

                style="@style/facebookText"
                android:layout_weight="7"/>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnSignUp"
            style="@style/loginButton"
            android:text="Sign Up with email"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

</RelativeLayout>