<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/category_item_margin"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_category"
        android:layout_width="@dimen/category_item_iv_width"
        android:scaleType="centerCrop"
        android:layout_height="@dimen/category_item_iv_height"/>

    <TextView
        android:id="@+id/tv_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_category"
        android:gravity="left"
        android:paddingTop = "@dimen/category_item_tv_padding"
        android:paddingBottom = "@dimen/category_item_tv_padding"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-light"
        android:textSize="@dimen/category_item_tv_size" />
</RelativeLayout>
</android.support.v7.widget.CardView>