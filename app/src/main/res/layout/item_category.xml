<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_margin="@dimen/category_item_margin"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_category"
        android:layout_width="@dimen/category_item_iv_width"
        android:scaleType="centerCrop"
        android:layout_height="@dimen/category_item_iv_height"/>

    <View
        android:id = "@+id/empty_view"
        android:layout_height = "10dip"
        android:layout_width = "match_parent"
        android:visibility="invisible"
        android:layout_alignParentBottom="true" />

    <TextView
        android:id="@+id/tv_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/empty_view"
        android:layout_centerHorizontal="true"
        android:background="@color/rv_home_category_tv_bg"
        android:paddingTop = "@dimen/category_item_tv_padding"
        android:paddingBottom = "@dimen/category_item_tv_padding"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-light"
        android:textSize="@dimen/category_item_tv_size" />
</RelativeLayout>