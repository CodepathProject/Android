<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_margin="@dimen/category_item_margin"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_category"
        android:layout_width="wrap_content"
        android:scaleType="centerCrop"
        android:layout_height="@dimen/category_item_iv_height"/>

    <TextView
        android:id="@+id/tv_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/rv_home_category_tv_bg"
        android:padding = "@dimen/category_item_tv_padding"
        android:textColor="@color/black"
        android:textSize="@dimen/category_item_tv_size" />
</RelativeLayout>