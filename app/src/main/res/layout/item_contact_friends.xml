<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/rv_home_item_margin"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="120dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivFriendProfile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:contentDescription="@string/contact_friend"
            tools:src="@drawable/quest" />

        <ImageView
            android:id="@+id/ivMessenger"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_below="@+id/ivFriendProfile"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_facebook_messenger" />

        <ImageView
            android:id="@+id/ivGmail"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_below="@+id/ivFriendProfile"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="7dp"
            android:src="@drawable/ic_gmail" />

    </RelativeLayout>
</android.support.v7.widget.CardView>